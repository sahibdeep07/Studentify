<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/classesItemView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <TextView
            android:id="@+id/classTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/class_title"
            android:textColor="@color/secondaryTextColor"
            android:textSize="18sp"
            android:typeface="serif"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/horizontalView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/classTitle" />

        <TextView
            android:id="@+id/professor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/professor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/horizontalView" />

        <View
            android:id="@+id/verticalView"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/horizontalView" />

        <TextView
            android:id="@+id/itemHomework"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="@string/homework"
            app:layout_constraintStart_toEndOf="@id/verticalView"
            app:layout_constraintTop_toBottomOf="@id/horizontalView" />

        <TextView
            android:id="@+id/itemProfessorName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:text="TextView"
            android:textSize="16sp"
            android:textColor="@color/secondaryTextColor"
            android:typeface="serif"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/professor"
            app:layout_constraintEnd_toStartOf="@id/verticalView"/>

        <TextView
            android:id="@+id/itemHomeworkResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="2dp"
            android:text="TextView"
            android:textSize="16sp"
            android:textColor="@color/secondaryTextColor"
            android:typeface="serif"
            app:layout_constraintStart_toEndOf="@id/verticalView"
            app:layout_constraintTop_toBottomOf="@id/itemHomework" />

        <TextView
            android:id="@+id/itemTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/itemProfessorName" />

        <TextView
            android:id="@+id/itemTestsAndQuizzes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="Tests/Quizzes"
            app:layout_constraintStart_toEndOf="@id/verticalView"
            app:layout_constraintTop_toBottomOf="@id/itemHomeworkResult" />

        <TextView
            android:id="@+id/itemTimeResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:text="TextView"
            android:textSize="16sp"
            android:textColor="@color/secondaryTextColor"
            android:typeface="serif"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/itemTime"
            app:layout_constraintEnd_toStartOf="@id/verticalView"
            />

        <TextView
            android:id="@+id/itemTestsResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="2dp"
            android:text="TextView"
            android:textSize="16sp"
            android:textColor="@color/secondaryTextColor"
            android:typeface="serif"
            app:layout_constraintStart_toEndOf="@id/verticalView"
            app:layout_constraintTop_toBottomOf="@id/itemTestsAndQuizzes" />

        <TextView
            android:id="@+id/itemRoomNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AC302"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>